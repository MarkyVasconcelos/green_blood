<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <br.com.greenblood.view.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <br.com.greenblood.hud.PlayerStatsView
        android:id="@+id/player_stats"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:padding="1dp" />

    <br.com.greenblood.hud.EnemyStatsView
        android:id="@+id/enemy_stats"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:padding="1dp"
        android:visibility="invisible" />

    <br.com.greenblood.hud.ItemView
        android:id="@+id/item_view"
        android:layout_width="27dp"
        android:layout_height="49dp"
        android:layout_gravity="right"
        android:layout_marginRight="6dp"
        android:visibility="invisible" />

    <br.com.greenblood.hud.DirectionalControls
        android:id="@+id/direction_control"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom" />

    <br.com.greenblood.hud.ActionControls
        android:id="@+id/action_control"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_gravity="bottom|right" />

    <br.com.greenblood.view.DialogView
        android:id="@+id/dialog_view"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="2dp"
        android:visibility="invisible" />

    <br.com.greenblood.view.SlideView
        android:id="@+id/slide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>